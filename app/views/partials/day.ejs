<% day = day % 7 %>
<div class="weekday-container">
    <div class="row">
        <div class="col-12 weekday-header">
            <span class="weekday">
                <%= timeHelper.weekDayName(day) %>
            </span>
        </div>
    </div>
    <div class="row restaurants-row">
        <div class="col-xl-3 col-lg-6 col-md-12">
            <%- include('restaurant', {restaurantId: restaurants.mensa.id, restaurantName: restaurants.mensa.name, restaurantFriendlyUrl: mensa.userFriendlyUrl, menu: mensa.menu ? mensa.menu[day] : null, combinedMenuList: true, day: day}) %>
            <%- include('restaurant', {restaurantId: restaurants.interspar.id, restaurantName: restaurants.interspar.name, restaurantFriendlyUrl: interspar.userFriendlyUrl, menu: interspar.menu ? interspar.menu[day] : null, combinedMenuList: true, day: day, chatGptPowered: true}) %>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-12">
            <%- include('restaurant', {restaurantId: restaurants.uniWirt.id, restaurantName: restaurants.uniWirt.name, restaurantFriendlyUrl: uniWirt.userFriendlyUrl, menu: uniWirt.menu ? uniWirt.menu[day] : null, combinedMenuList: true, day: day}) %>
            <%- include('restaurant', {restaurantId: restaurants.uniPizzeria.id, restaurantName: restaurants.uniPizzeria.name, restaurantFriendlyUrl: uniPizzeria.userFriendlyUrl, menu: uniPizzeria.menu ? uniPizzeria.menu[day] : null, combinedMenuList: true, day: day, chatGptPowered: true}) %>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-12">
            <%- include('restaurant', {restaurantId: restaurants.bitsAndBytes.id, restaurantName: restaurants.bitsAndBytes.name, restaurantFriendlyUrl: bitsAndBytes.userFriendlyUrl, menu: bitsAndBytes.menu ? bitsAndBytes.menu[day] : null, combinedMenuList: true, day: day, chatGptPowered: true}) %>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-12">
            <%- include('restaurant', {restaurantId: restaurants.hotspot.id, restaurantName: restaurants.hotspot.name, restaurantFriendlyUrl: hotspot.userFriendlyUrl, menu: hotspot.menu ? hotspot.menu[day] : null, combinedMenuList: true, day: day, chatGptPowered: true}) %>
        </div>
    </div>
</div>
