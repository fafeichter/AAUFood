<% var breakInfo = getBreakInfo(restaurantId, day) %>
<% var icon = breakInfo.icon || "fa fa-umbrella-beach" %>
<div class="info">
    <i class="fa <%= icon %> fa-2x info-icon" aria-hidden="true"></i>
    <p>
        <%= breakInfo.textPre %>
        <br/>
        <span class="break-date">
            <%= breakInfo.from.format('DD. MMMM YYYY') %>
        </span>
        -
        <span class="break-date">
            <%= breakInfo.to.format('DD. MMMM YYYY') %>
        </span>
        <br/>
        <%= breakInfo.textPost %>
    </p>
</div>